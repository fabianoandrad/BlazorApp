<div class="alert alert-secondary mt-4" role="alert">
    <span class="oi oi-pencil mr-2" aria-hidden="true"></span>
    <strong>@Title</strong>

    <span class="text-nowrap">
        Please take our
        <a target="_blank" class="font-weight-bold" href="https://go.microsoft.com/fwlink/?linkid=2137813">brief
            survey</a>
    </span>
    and tell us what you think.
</div>

<div>
    <button class="btn btn-primary" @onclick="msg">Btn</button>
    <p>@openMsg</p>
</div>

@code {
    private string openMsg = "";
        // Demonstrates how a parent component can supply parameters
        [Parameter]
public string Title { get; set; }

    private void msg()
    {
        if (openMsg != "")
        {
           openMsg = "";
        }else{
        openMsg = "Hello Word";

        }
    }
}
