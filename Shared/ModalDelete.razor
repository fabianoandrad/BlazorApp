<div class="modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true"
    style="display: block">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Excluir Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="ModalCancel">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <span>Deseja realmente excluir este item</span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" @onclick="@ModalCancel">Cancelar</button>
                <button type="button" class="btn btn-danger" @onclick="@ModalDel">Exluir</button>
            </div>
        </div>
    </div>
</div>

@code
{

    [Parameter]
    public EventCallback<bool> ModalDisplayDelete { get; set; }

    private Task ModalDel()
    {
        return ModalDisplayDelete.InvokeAsync(true);
    }

    private Task ModalCancel()
    {
        return ModalDisplayDelete.InvokeAsync(false);
    }

}